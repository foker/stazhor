		<% include searchform %>
		<div id="enter_link">
			<%if(typeof userGroup!='undefined' && userGroup > 0){%>
				<a href="/cabinet/">Личный кабинет</a>
			<% } else {%>
				<a href="/register/">Регистрация</a>
			<% } %>
			<div class="triangle"></div>
		</div>
		<div id="authorization">
			<%if(typeof userGroup!='undefined' && userGroup > 0){%>
				<a href="/exit/">Выйти</a>
			<% } else {%>
				<a href="/auth/">Вход для работодателей</a>
			<% } %>
			<div class="triangle"></div>
		</div>
	</div>
